{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "lib": [
            "ES2020"
        ],
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist-electron"
    },
    "include": [
        "electron/preload/**/*"
    ]
}