{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "lib": [
            "ES2020"
        ],
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist-electron",
        "baseUrl": ".",
        "paths": {
            "@electron/*": [
                "./electron/*"
            ]
        }
    },
    "include": [
        "electron/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "dist-electron"
    ]
}